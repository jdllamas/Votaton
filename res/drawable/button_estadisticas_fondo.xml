<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"            
            >
            <corners android:radius="30dp" />

            <gradient
                android:angle="90"
                android:centerColor="#7995A8"
                android:centerX="50%"
                android:endColor="#EDEDED"
                android:startColor="#000000"
                android:type="linear" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size
                android:height="150dp"
                android:width="300dp" />

            <stroke
                android:width="3dp"
                android:color="#878787" />
        </shape>
    </item>
	<item>        
        <bitmap android:src="@drawable/estat"            
            />
        <padding
            android:left="2dp"
			android:top="2dp"
			android:right="2dp"
			android:bottom="2dp"
            />
    </item>
</layer-list>