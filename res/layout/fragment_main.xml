<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vcc.votaton.MainActivity$PlaceholderFragment"    
    >

    <Button
        android:id="@+id/estadisticas"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/estat"
        android:onClick="ShowEstadistica"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <Button
        android:id="@+id/partidos"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/estadisticas"
        android:layout_below="@+id/estadisticas"
        android:layout_marginTop="37dp"
        android:background="@drawable/button_estadisticas_fondo"
        android:onClick="ShowPartidos"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/votos"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/partidos"
        android:layout_toRightOf="@+id/estadisticas"
        android:background="@drawable/button_votos_fondo"
        android:onClick="ShowPartidos"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

</RelativeLayout>