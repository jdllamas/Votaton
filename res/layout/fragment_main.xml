<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vcc.votaton.MainActivity$PlaceholderFragment"
    android:background="#12A1B1"
    >

    <Button
        android:id="@+id/partidos"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_partidos_fondo"
        android:onClick="showPartidos"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/button_partido"
        android:textColor="#FFFFFF"
        android:textSize="27sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/partidos"
        android:layout_below="@+id/votos"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_estadisticas_fondo"
        android:onClick="showPartidos"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/statistics"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/votos"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignBaseline="@+id/partidos"
        android:layout_alignBottom="@+id/partidos"
        android:layout_alignRight="@+id/button2"
        android:background="@drawable/button_partidos_fondo"
        android:onClick="showPartidos"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/como_votar"
        android:textColor="#FFFFFF"
        android:textSize="27sp" />

</RelativeLayout>
