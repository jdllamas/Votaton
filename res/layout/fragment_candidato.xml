<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vcc.votaton.CandidatoActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/foto"
        android:layout_width="150dp"
        android:layout_height="150dp"       
        
        android:onClick="Blanco"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/formula"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/foto"
        android:onClick="Blanco"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/seguridad"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/foto"
        android:layout_below="@+id/foto"
        android:layout_marginTop="50dp"
        android:onClick="Blanco"
        android:background="@drawable/seguridad"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/salud"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/seguridad"
        android:layout_alignBottom="@+id/seguridad"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/seguridad"
        android:onClick="Blanco"
        android:background="@drawable/salud"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/trabajo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/salud"
        android:layout_alignBottom="@+id/salud"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/salud"
        android:background="@drawable/trabajo"
        android:onClick="Blanco"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/educacion"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/seguridad"
        android:layout_below="@+id/seguridad"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:onClick="Blanco"
        android:background="@drawable/educacion"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <Button
        android:id="@+id/ambiente"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/educacion"
        android:layout_alignBottom="@+id/educacion"
        android:layout_toRightOf="@+id/foto"
        android:onClick="Blanco"
        android:background="@drawable/medio"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/foto"
        android:layout_below="@+id/foto"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
